<div class="jumbotron">
  <p>
    <%= t :para %>
  </p>

  <h3><%= t :subtitle %></h3>
      
  <div class="row">
    <div class="col-md-6">
      <table class="table">
        <% table = t(:table).dup %>
        <% thead = table.shift %>
        <thead>
          <tr>
            <% thead.each do |th| %>
              <th><%= th %></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% table.each do |tr| %>
            <tr>
              <% tr.each do |td| %>
                <td><%= td %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <em class="text-muted"><%= raw t :para2 %></em>
  <br>

  <%= link_to "#{t(:button)} Â»", new_registration_path, class: "btn btn-lg btn-warning" %>
</div>