<div class="row">
  <% panels = t("panel").each_slice(2).to_a.transpose %>
  <% panels.each do |panels_slice| %>
    <div class="col-md-6">
      <% panels_slice.each do |panel| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><%= panel[:title] %></h3>
          </div>
          <div class="panel-body">
            <ul>
              <% panel[:list].each do |list| %>
                <li><p><%= list %></p></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
