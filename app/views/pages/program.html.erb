<% if params[:locale] == "en" %>

  <div class="padded">
    <h4 class="text-muted"><%= t :para %></h4>
  </div>
  <div class="row">
    <% panels = t("panel").each_slice(2).to_a.transpose %>
    <% panels.each do |panels_slice| %>
      <div class="col-md-6">
        <% panels_slice.each do |panel| %>
          <div class="well">
            <h3 class="ml20 mb20"><%= panel[:title] %></h3>
            <ul class="ml20">
              <% panel[:list].each do |list| %>
                <li><p><%= raw list %></p></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>

  <% t("panel").each do |panel| %>
    <div class="well">
      <div class="row">
        <div class="col-md-3">
          <h3 class="sm-except-text-right ml20"><%= dash_nobr panel[:title] %></h3>
        </div>
        <div class="col-md-9">
          <ul class="mt20 mb20">
            <% panel[:list].each do |list| %>
              <li><p><%= raw list %></p></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
